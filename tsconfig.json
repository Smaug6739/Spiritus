{
	"version": "2.4.2",
	"compilerOptions": {
		"lib": [
			"ES2021"
		],
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noUnusedLocals": true, /* Report errors on unused locals. */
		"noUnusedParameters": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": false,
		"sourceMap": false,
		"strict": true,
		"target": "ES2021",
		"skipLibCheck": false
	},
	"exclude": [
		"node_modules",
		"ignore"
	]
}